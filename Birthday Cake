<body>
  <div class="cake-container">
    <div class="cake-tier">
      <div class="cake-text">Happy Birthday, Tonie!</div>
      <div class="ribbons"></div>
      <div class="candles" id="candles"></div>
    </div>
    <div class="tier-top"></div>
  </div>

<script>
  const candleColors = ["babyBlue", "black", "pink"];
  const candleCount = 17;
  const candlesContainer = document.getElementById("candles");

  for (let i = 0; i < candleCount; i++) {
    const candle = document.createElement("div");
    candle.classList.add("candle");
    candle.classList.add(candleColors[i % candleColors.length]);

    const flame = document.createElement("div");
    flame.classList.add("flame");
    candle.appendChild(flame);

    candle.addEventListener("click", () => {
      flame.style.display = flame.style.display === "block" ? "none" : "block";
    });

    candlesContainer.appendChild(candle);
  }
</script>
</body>
